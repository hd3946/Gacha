{
  "name": "@apps/contract",
  "version": "1.0.0",
  "main": "",
  "packageManager": "yarn@3.6.0",
  "scripts": {
    "clean": "rm -rf artifacts cache typechain",
    "compile": "hardhat compile --force",
    "graph-node": "docker-compose down && docker-compose up -d",
    "graph-dev": "yarn create-local && yarn deploy-local",
    "lint": "eslint \"**/*.{js,ts}\"",
    "lint:sol": "solhint -f table contracts/**/*.sol",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "preslither": "rm -rf @openzeppelin && rm -rf erc721a && ln -s ../../node_modules/@openzeppelin @openzeppelin && ln -s ../../node_modules/erc721a erc721a",
    "postslither": "rm -rf @openzeppelin && rm -rf erc721a",
    "deploy": "hardhat deploy",
    "deploy:mainnet": "hardhat --network mainnet deploy",
    "deploy:rinkeby": "hardhat --network rinkeby deploy",
    "deploy:ropsten": "hardhat --network ropsten deploy",
    "etherscan:mainnet": "hardhat --network mainnet etherscan-verify",
    "etherscan:rinkeby": "hardhat --network rinkeby etherscan-verify"
  },
  "devDependencies": {
    "@ethersproject/bignumber": "^5.7.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.17",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.8",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^4.0.10",
    "ethers": "5.7.1",
    "hardhat": "^2.17.3",
    "hardhat-gas-reporter": "^1.0.6",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.4.0",
    "typechain": "^5.2.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@chainlink/contracts": "0.2.1",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-verify": "^2.0.1",
    "@openzeppelin/contracts": "^4.4.1",
    "mocha": "^9.2.1"
  }
}
